<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="5">

    <RelativeLayout
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:layout_weight="2">

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/detail_image"/>

        <!-- transparent overly with bar title -->
        <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="#99333333"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loco Bar"
                    android:singleLine="true"
                    android:paddingTop="5dip"
                    android:paddingLeft="10dip"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_title"
                    android:text="Baumgasse 77"
                    android:singleLine="true"
                    android:paddingBottom="5dip"
                    android:paddingLeft="10dip"
                    android:textColor="#4AC948"
                    android:textSize="15sp"/>

        </RelativeLayout>
    </RelativeLayout>

    <!-- second part begins -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:background="#CCCCCC">

            <!-- grey part with description of happy hour! -->
            <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="fill_parent"
                    android:background="#333333">

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:id="@+id/detail_textview"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="nix!\nnox\nex"
                          android:padding="18dp"
                          android:textSize="20sp"/>
            </RelativeLayout>

            <!-- very grey part with description of happy hour! -->
            <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="fill_parent">

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_textdview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nix!\nnox\nex"
                android:padding="18dp"
                android:textColor="#000000"
                android:textSize="20sp"/>

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:id="@+id/detail_textddview"
                          android:layout_below="@+id/detail_textdview"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="nix!\nnox\nex"
                          android:padding="18dp"
                          android:textColor="#000000"

                          android:textSize="20sp"/>
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:id="@+id/detail_texftddview"
                          android:layout_below="@+id/detail_textdview"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="nix!\nnox\nex"
                          android:padding="18dp"
                          android:textColor="#000000"
                          android:textSize="20sp"/>
            </RelativeLayout>

            </LinearLayout>
    </ScrollView>


</LinearLayout>